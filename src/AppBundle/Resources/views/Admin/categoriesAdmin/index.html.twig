{% extends '::admin/layoutAdmin.html.twig' %}

{% block bodyAdmin %}
    <h1>Categories list</h1>


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><a href="{{ path('admin_categories_show', { 'id': category.id }) }}">{{ category.id }}</a></td>
                <td>{{ category.nom }}</td>
                <td>
                    <a href="{{ path('admin_categories_show', { 'id': category.id }) }}"><i class="icon-eye-open"></i></a>
                    <a href="{{ path('admin_categories_edit', { 'id': category.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_categories_new') }}">Create a new category</a>
        </li>
    </ul>
{% endblock %}
