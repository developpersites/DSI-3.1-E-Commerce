{% extends '::admin/layoutAdmin.html.twig' %}

{% block bodyAdmin %}

    <h1>Produits list</h1>


    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Disponible</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for produit in produits %}
            <tr>
                <td><a href="{{ path('admin_produits_show', { 'id': produit.id }) }}">{{ produit.id }}</a></td>
                <td>{{ produit.nom }}</td>
                <td>{{ produit.prix }}</td>
                <td>{% if produit.disponible %}Yes{% else %}No{% endif %}</td>
                <td>
                    <a href="{{ path('admin_produits_show', { 'id': produit.id }) }}"><i class="icon-eye-open"></i></a>
                    <a href="{{ path('admin_produits_edit', { 'id': produit.id }) }}"><i class="icon-edit"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_produits_new') }}">Create a new produit</a>
        </li>
    </ul>
{% endblock %}
